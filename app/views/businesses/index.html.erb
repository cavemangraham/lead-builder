<p id="notice"><%= notice %></p>

<h1>Listing Businesses</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Website</th>
      <th>Phone</th>
      <th>Responsive</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each_with_index do |business, i| %>
      <tr>
        <td><%= i %></td>
        <td><%= business.name %></td>
        <td><%= business.address %></td>
        <td><%= business.email %></td>
        <td><%= link_to business.website, business.website, target: '_blank' %></td>
        <td><%= business.phone %></td>
        <td><%= business.responsive %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

